{
  "name": "@browserstack/mcp-server",
  "version": "1.1.8",
  "description": "BrowserStack's Official MCP Server",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/browserstack/mcp-server.git"
  },
  "type": "module",
  "scripts": {
    "build": "npm run lint && npm run format && tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "bin": {
    "browserstack-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "browserstack",
    "testing",
    "automation"
  ],
  "engines": {
    "node": ">=18"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browserstack-mcp-server": "file:./mcp-server",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "@types/form-data": "^2.5.2",
    "axios": "^1.8.4",
    "browserstack-local": "^1.5.6",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "form-data": "^4.0.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0",
    "webdriverio": "^9.13.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/cors": "^2.8.19",
    "@types/csv-parse": "^1.1.12",
    "@types/express": "^5.0.3",
    "@types/node": "^22.14.1",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.25.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  }
}
